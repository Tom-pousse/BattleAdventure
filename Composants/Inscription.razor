@inject NavigationManager NavigationManager

<form class="display" @onsubmit="InscriptionUtilisateur">
    <div class="form-group">
        <label for="nom">Nom:</label>
        <input type="text" class="form-control" id="nom" @bind="Nom" />
    </div>
    <div class="form-group">
        <label for="prenom">Prénom:</label>
        <input type="text" class="form-control" id="prenom" @bind="Prenom" />
    </div>
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" class="form-control" id="email" @bind="Email" />
    </div>
    <div class="form-group">
        <label for="password">Mot de passe:</label>
        <input type="password" class="form-control" id="password" @bind="MotDePasse" />
    </div>
    <button type="submit" class="btn btn-primary">S'inscrire</button>
</form>